<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
   
  <!--  Screen Design for VIDEOS -->
  <TextView android:text="Disater Accident Reporting System\n"
            android:padding="15dip"
            android:textSize="29dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#669900"/>
  <ImageView
        android:id="@+id/img"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="98dp"
        android:src="@drawable/images" />
  
  <TextView android:text="You can mark the place on a map.\n\nIt Will show the closest path to the said institutions.\n\nIt Will show important places nearby such as police stations, hospitals, schools.\n\nAnd it will search the web/use public DBs to get the TP number/email address, etc of those places.\n\nCan make the call on the app itself."
            android:padding="15dip"
            android:textSize="18dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:textColor="#6a00d7"/>
  
</RelativeLayout>